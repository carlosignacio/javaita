	@Test
	public void tesAdicionaPizza() {
		Pizza p = new Pizza();
		p.adicionaIngrediente("Marguerita");
		p.adicionaIngrediente("Portuguesa");
		assertEquals(1,p.qtdIngrediente);
	}

}


